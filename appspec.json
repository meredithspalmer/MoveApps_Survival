{
  "version": "1.0",
  "settings": [
    {
      "id": "time_period_start",
      "name": "Start date",
      "description": "Select the start date for your project. If left empty, the start date will be the first deploy_on_timestamp date.",
      "defaultValue": null,
      "type": "INSTANT"
    },
    {
      "id": "time_period_end",
      "name": "End date",
      "description": "Select the end date for your project. If left empty, the end date will be the last deploy_off_timestamp date.",
      "defaultValue": null,
      "type": "INSTANT"
    },
    {
      "id": "fix_na_start_times",
      "name": "Fix empty start times",
      "description": "Define how to deal with NA start dates (deploy_on_timestamp).", 
      "defaultValue": "timestamp",
      "type": "RADIOBUTTONS",
      "options":[
        {
          "value": "timestamp", 
          "displayText": "Replace NA deploy_on_timestamp with time_period_start"
        }, 
        {
          "value": "remove",
          "displayText": "Remove tracks with NA deploy_on_timestamp" 
        }
      ]
    }, 
    {
      "id": "fix_na_end_times",
      "name": "Fix empty end times",
      "description": "Define how to deal with NA end dates (deploy_off_timestamp).", 
      "defaultValue": "timestamp",
      "type": "RADIOBUTTONS",
      "options":[
        {
          "value": "timestamp", 
          "displayText": "Replace NA deploy_off_timestamp with time_period_end"
        }, 
        {
          "value": "systime",
          "displayText": "Replace NA deploy_off_timestamp with current date" 
        }, 
        {
          "value": "remove",
          "displayText": "Remove tracks with NA deploy_off_timestamp" 
        }
      ]
    }, 
    {
      "id": "censor_capture_mortality",
      "name": "Censor capture-related mortality",
      "description": "If necessary, input number of days to exclude from analysis post-capture.",
      "defaultValue": 0,
      "type": "INTEGER"
    }, 
    {
      "id": "group_comparison_individual",
      "name": "Groups for comparison",
      "description": "If interested in comparing across groups, identify the grouping variable.",
      "defaultValue": null,
      "type": "DROPDOWN",
      "options": [
        {
          "value": null,
          "displayText": "No comparison (all individuals)"
        },
        {
          "value": "sex",
          "displayText": "Sex"
        },
        {
          "value": "lifestage",
          "displayText": "Life stage"
        },
        {
          "value": "reproCond",
          "displayText": "Reproductive condition"
        },
        {
          "value": "attachment",
          "displayText": "Attachment type"
        }
      ]
    }, 
    {
      "id": "life_table_days",
      "name": "Generate periods for life table",
      "description": "Define how often to calculate survival probabilities for the life tabel (e.g., every 30 days).",
      "defaultValue": 30,
      "type": "INTEGER"
    }, 
    {
      "id": "calc_month_mort",
      "name": "Plot monthly mortality",
      "description": "Select an option.",
      "defaultValue": FALSE,
      "type": "RADIOBUTTONS",
      "options": [{
        "value": FALSE,
        "displayText": "Do not plot monthly mortality"
        },
        {
          "value": TRUE,
          "displayText": "Plot monthly mortality"}]
          },
    {
      "id": "add_risk_table",
      "name": "Add risk and cumulative events tables to KM and hazard plots",
      "description": "Select an option.",
      "defaultValue": FALSE,
      "type": "RADIOBUTTONS",
      "options": [{
        "value": FALSE,
        "displayText": "Do not add risk/events tables."
        },
        {
          "value": TRUE,
          "displayText": "Add risk/events tables."}]
          },  
  ],
  "dependencies": {
    "R": [
      {"name": "move2"},
      {"name": "survival"},
      {"name": "survminer"},
      {"name": "ggplot2"},
      {"name": "dplyr"},
      {"name": "lubridate"},
      {"name": "stringr"},
      {"name": "sf"},
      {"name": "forecats"}, 
      {"name": "tidyr"}
    ]
  },
  "license": {
    "key": "MIT"
  },
  "language": "eng",
  "keywords": [
    "survival analysis",
    "mortality"
  ],
  "people": [
